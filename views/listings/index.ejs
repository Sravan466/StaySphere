<% layout("/layouts/boilerplate") %>

<body>
  <div class="container">
    
   <!-- Filters + Toggle Wrapper -->
<div class="row justify-content-between align-items-center px-2">
  <!-- Filter Icons -->
  <div class="col-12 col-md-10">
    <div class="filter-scroll-wrapper">
      <div class="filters d-flex flex-nowrap justify-content-start">
      <div class="filter text-center">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter text-center">
        <a href="/listings?category=Rooms" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>
      </div>
      <div class="filter text-center">
        <a href="/listings?category=Iconic cities" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Iconic cities</p>
        </a>
      </div>
      <div class="filter text-center">
        <a href="/listings?category=Amazing View" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Amazing View</p>
        </a>
      </div>
      <div class="filter text-center">
        <a href="/listings?category=Beach" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-house-tsunami"></i></div>
          <p>Beach</p>
        </a>
      </div>
      <div class="filter text-center">
        <a href="/listings?category=Arctic" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
        </a>
      </div>
      <div class="filter text-center">
        <a href="/listings?category=Amazing Pools" style="text-decoration: none; color: inherit;">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </a>
      </div>
      <div class="filter text-center">
        <a href="/listings?category=Mansion" style="text-decoration: none; color: inherit;">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Mansion</p>
        </a>
      </div>
    </div>
  </div>
  </div>

  <!-- Toggle Button -->
  <div class="col-12 col-md-2 d-flex justify-content-center justify-content-md-end mt-2 mt-md-0">
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
      </div>
    </div>
  </div>
</div>


    <!-- Listings -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% if (allListings.length === 0) { %>
        <div class="d-flex justify-content-center align-items-center"  style="height: 70vh; width: 100%;">
         <div class="col-12 text-center mt-4">
          <h4 class="text-muted">No listings found. Try adjusting your filters or search.</h4>
         </div>
        </div>
      <% } else { %>
        <% for(let listing of allListings) { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
              <img class="card-img-top" src="<%= listing.image && listing.image.url ? listing.image.url : 'https://via.placeholder.com/300' %>" alt="listing_image" style="height: 20rem;" />
              <div class="card-body">
                <p class="card-text">
                  <b><%= listing.title %></b> <br />
                  â‚¹<%= listing.price.toLocaleString("en-IN") %> / night
                  <i class="tax-info"> &nbsp; +18% GST</i>
                </p>
              </div>
            </div>
          </a>
        <% } %>
      <% } %>
    </div>
    

  </div>

  <!-- Tax Toggle Script -->
  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
        info.style.display = info.style.display !== "inline" ? "inline" : "none";
      }
    });
  </script>
</body>
